{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Adaptation Atlas Notebooks",
  "description": "Configuration for notebooks shown on the index grid.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to this schema file."
    },
    "notebooks": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "path",
          "image",
          "title"
        ],
        "properties": {
          "id": {
            "type": "string",
            "description": "Stable, unique identifier for the notebook card."
          },
          "path": {
            "type": "string",
            "description": "Relative path to the notebook source (.qmd); will render as .html on the site."
          },
          "image": {
            "type": "string",
            "description": "Relative path to the hero image displayed on the card."
          },
          "title": {
            "type": "object",
            "description": "Localized notebook titles; add languages as needed.",
            "minProperties": 1,
            "additionalProperties": {
              "type": "string"
            },
            "properties": {
              "en": {
                "type": "string"
              },
              "fr": {
                "type": "string"
              }
            }
          },
          "summary": {
            "type": "object",
            "description": "Localized summaries; optional.",
            "minProperties": 1,
            "additionalProperties": {
              "type": "string"
            },
            "properties": {
              "en": {
                "type": "string"
              },
              "fr": {
                "type": "string"
              }
            }
          },
          "hide": {
            "type": "boolean",
            "description": "Optional flag to omit a notebook from the index."
          }
        }
      }
    }
  },
  "required": [
    "notebooks"
  ]
}
